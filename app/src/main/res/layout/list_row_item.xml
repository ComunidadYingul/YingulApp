<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="false"
        card_view:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp">

            <!--android.support.v7.widget.CardView
                android:id="@+id/card_view_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="false"
                card_view:elevation="5dp"-->

            <LinearLayout
                android:id="@+id/card_view_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/image_item_cat_list_image"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/placeholder120" />
            </LinearLayout>
            <!--/android.support.v7.widget.CardView-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_item_cat_list_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center|left"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="Camara profesional nikon"
                        android:textSize="15sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/lytPriceNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textMoneyNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:ellipsize="end"
                            android:text="$"
                            android:textSize="13sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/textPriceNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:ellipsize="end"
                            android:text="1200"
                            android:textSize="13sp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp">
                            <TextView
                                android:id="@+id/textMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginRight="2dp"
                                android:ellipsize="end"
                                android:textSize="20sp"
                                android:text="$"
                                android:textColor="@color/colorPrimaryText" />
                            <TextView
                                android:id="@+id/text_item_cat_list_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:ellipsize="end"
                                android:textSize="20sp"
                                android:text="2000"
                                android:textColor="@color/colorPrimaryText" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lytDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textDiscountPorcent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:ellipsize="end"
                                android:text="31"
                                android:textSize="15sp"
                                android:textColor="@color/yngOrange" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:ellipsize="end"
                                android:text="% OFF"
                                android:textSize="15sp"
                                android:textColor="@color/yngOrange" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/lytEnvioGratis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/car"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_margin="3dp"
                            android:textSize="10sp"
                            android:text="Envio gratis"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/yngOrange" />
                    </LinearLayout>

                    <!--com.github.ornolfr.ratingview.RatingView
                        android:id="@+id/rating_cat_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="0dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="2dp"
                        card_view:drawable_empty="@drawable/ic_star_empty"
                        card_view:drawable_filled="@drawable/ic_star_filled"
                        card_view:drawable_half="@drawable/ic_star_half"
                        card_view:drawable_margin="2dp"
                        card_view:drawable_size="20dp"
                        card_view:is_indicator="true"
                        card_view:max_count="5" />

                    <TextView
                        android:id="@+id/text_item_cat_list_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:layout_alignParentRight="true"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="ffffff"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/red" /-->

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
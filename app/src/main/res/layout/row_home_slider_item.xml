<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_home_slider"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_home_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:resizeMode="horizontal|vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder220" />

        <ImageView
            android:id="@+id/imageView_home_slider_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"

            android:resizeMode="horizontal|vertical"
            android:scaleType="fitXY" />
        <!--android:background="@drawable/slider_gradient"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/text_home_slider_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_home_slider_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white" />

            <com.github.ornolfr.ratingview.RatingView
                android:id="@+id/rating_home_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="2dp"
                card_view:drawable_empty="@drawable/ic_star_empty"
                card_view:drawable_filled="@drawable/ic_star_filled"
                card_view:drawable_half="@drawable/ic_star_half"
                card_view:drawable_margin="2dp"
                card_view:drawable_size="20dp"
                card_view:is_indicator="true"
                card_view:max_count="5"
                android:visibility="invisible"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>